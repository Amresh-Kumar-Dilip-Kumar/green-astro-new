---
const {
  type,
  ...buttonProps
}: {
  type?: "button" | "submit" | "reset";
} = Astro.props;
---

<button
  {...buttonProps}
  class="poppins hidden md:block text-black font-semibold px-4 py-2 rounded-tl-lg rounded-tr-lg border border-green-700 rounded-br-lg hover:bg-green-700 hover:text-white transition duration-200 cursor-pointer whitespace-nowrap shadow my-auto"
>
  <slot />
</button>
