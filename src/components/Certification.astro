const certifications = [
    {
        name: "Certified Organic Dairy Producer",
        image: "/image-6.png", // Replace with your certification image path
    },
    {
        name: "Food Safety Certification",
        image: "/image-6.png", // Replace with your certification image path
    },
    {
        name: "ISO 9001 Quality Management",
        image: "/image-6.png", // Replace with your certification image path
    },
    {
        name: "HACCP Certified",
        image: "/image-6.png", // Replace with your certification image path
    },

    {
        name: "HACCP Certified",
        image: "/image-6.png", // Replace with your certification image path
    },

    {
        name: "HACCP Certified",
        image: "/image-6.png", // Replace with your certification image path
    },
];
---

<section
    class="certification-section py-10 px-8 w-full bg-[rgba(234,245,241,0.8)]"
>
    <div class="text-center text-3xl font-semibold mt-14">
        <h2 class="hover:text-green-700">Our-Certifications</h2>
        <div class="w-24 h-2 bg-green-700 mx-auto mt-4 rounded-lg"></div>
    </div>

    <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-14 w-[90vw] mx-auto"
    >
        {
            certifications.map((certification) => (
                <div class="certification-card bg-white rounded-lg shadow-md p-4 flex flex-col items-center">
                    <img
                        src={certification.image}
                        alt={certification.name}
                        class="w-80 h-auto object-contain mb-4"
                    />
                    <h3 class="text-lg font-semibold text-gray-800">
                        {certification.name}
                    </h3>
                </div>
            ))
        }
    </div>
</section>

